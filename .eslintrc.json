{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "rules": {
    "indent": ["error", 4],
    "import/extensions": ["error", "ignorePackages", {
      "js": "always"
    }],
    "import/prefer-default-export": "off",
    "no-const-assign": "off"
  }
}